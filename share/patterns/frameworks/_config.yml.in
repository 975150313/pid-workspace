
# Site settings

url: "@${PROJECT_NAME}_FRAMEWORK_SITE@" # the base hostname & protocol for your site

# Build settings
markdown: kramdown
highlighter: rouge
excerpt_separator: ""

port:    4000
host:    127.0.0.1
baseurl: ""


collections:
 packages:
    output: true
 external:
    output: true

defaults:
  - scope:
      path: ""
      type: packages
    values:
      layout: package

defaults:
  - scope:
      path: ""
      type: external
    values:
      layout: external
